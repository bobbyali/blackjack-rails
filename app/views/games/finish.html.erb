<div class="booyah-box">
	<h1>Game Finished</h1>
	<p>
	<table class="table table-condensed">
		<tr>
			<td><b>Player</b></td>
			<td><b>Status</b></td>
			<td><b>Score</b></td>
		</tr>
		<% @players.each do |player| %>
			<tr <%= winner_row_highlighting(player) %> >
				<td><%= get_player_label(@current_user_id, player) %></td>
				<td><%= player.status %></td>
				<td><%= player.score %></td>
			</tr>
		<% end %>
	</table>
	</p>
</div>


<div class="booyah-box">

	<% @players.each do |player| %>			
		<% if current_user.id == player.user.id %>
			<p>Your cards: <br/> 			
				<% player.output_hand.each do |card| %>					
					<%= image_tag Card.get_card_image(card), size: "100x146", alt: card %>
				<% end %>
			</p>
			<p>
				TOTAL: <%= player.total_value_cards %>
			</p>
		<% end %>
		</p>
	<% end %>


	<% @players.each do |player| %>			
		<% if current_user.id != player.user.id %>
			<p>Cards for <b><%= player.user.email %></b>: <br/>
				<% player.output_hand.each do |card| %>					
					<%= image_tag Card.get_card_image(card), size: "100x146", alt: card %>
				<% end %>
			</p>
			<p>
				TOTAL: <%= player.total_value_cards %>
			</p>
		<% end %>
		</p>
	<% end %>	
</div>

<div class="booyah-box">
	Time to next game is 
	<div class="Timer">10</div> seconds.
</div>

<script>
$(function() {
	var counter = 10;
	var interval = null;
	$(document).on('ready',function(){
		    interval = setInterval(function() {
			counter = counter - 1;
	    	$('.Timer').text((counter));
	    	if (counter < 1) {
	    		clearInterval(interval);
	    		window.location.href = "<%= url_for :controller => 'games', :action => 'play', :id => @game.id %>";
	    	}
		}, 1000);
	});
});
</script>

